<div class="modal fade @(isVisible ? "show d-block" : "")" tabindex="-1" style="background: rgba(0, 0, 0, 0.5);">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">@Title</h5>
                <button type="button" class="btn-close" @onclick="Hide"></button>
            </div>
            <div class="modal-body">
                <p class="@modalClass">@BodyText</p>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" @onclick="Hide">Close</button>
            </div>
        </div>
    </div>
</div>

@code {
    private bool isVisible = false;
    private string modalClass = string.Empty;

    [Parameter] public string Title { get; set; } = "Notification";
    [Parameter] public string BodyText { get; set; } = "Message";

    public void Show(string title, string message, string type)
    {
        Title = title;
        BodyText = message;
        SetModalClass(type);
        isVisible = true;
        StateHasChanged();
    }

    private void Hide()
    {
        isVisible = false;
        StateHasChanged();
    }

    private void SetModalClass(string type)
    {
        modalClass = type switch
        {
            "success" => "text-success",
            "warning" => "text-warning",
            "error" => "text-danger",
            _ => ""
        };
    }
}
